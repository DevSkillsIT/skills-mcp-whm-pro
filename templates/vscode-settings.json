{
  "mcp.mcpServers": {
    "skills-whm-pro": {
      "url": "http://mcp.servidor.one:3200/mcp",
      "name": "Skills WHM Pro",
      "description": "WHM/cPanel management with 48 advanced tools",
      "headers": {
        "x-api-key": "YOUR_WHM_MCP_API_KEY_HERE"
      }
    }
  },
  "files.associations": {
    "*.whm": "json",
    "ad-config.json": "jsonc"
  },
  "json.schemas": [
    {
      "fileMatch": ["schemas/mcp-tools.json"],
      "url": "./schemas/mcp-tools.json"
    }
  ]
}

