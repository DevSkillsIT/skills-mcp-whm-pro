# WHM Configuration (Porta 2087 = HTTPS obrigatória)
WHM_HOST=whm.example.com
WHM_PORT=2087
WHM_USERNAME=root
WHM_API_TOKEN=your_api_token_here

# SSH Configuration (opcional)
SSH_HOST=server.example.com
SSH_PORT=22
SSH_USERNAME=root
SSH_KEY_PATH=/path/to/key

# Server Configuration
MCP_PORT=3200
LOG_LEVEL=info
NODE_ENV=production

# Autenticação HTTP (CC-01)
WHM_MCP_API_KEY=sk_whm_mcp_prod_CHANGE_ME

# Safety Guard (proteção contra deletions acidentais)
MCP_SAFETY_TOKEN=CHANGE_ME_CONFIRMATION
# Valores: on | off
MCP_SAFETY_GUARD=on

# Lista customizada de serviços permitidos para system.restart_service (opcional)
# MCP_ALLOWED_SERVICES=httpd,nginx,mysql

# Timeouts (em milissegundos) - Opcional
# TIMEOUT_WHM_API=30000      # WHM API (default: 30s)
# TIMEOUT_SSH=60000          # SSH operations (default: 60s)
# TIMEOUT_DNS=45000          # DNS operations (default: 45s)
# TIMEOUT_HTTP=30000         # HTTP geral (default: 30s)
# TIMEOUT_FILE=30000         # File operations (default: 30s)
# TIMEOUT_DEFAULT=30000      # Fallback (default: 30s)
